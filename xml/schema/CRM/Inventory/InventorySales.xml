<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Inventory</base>
  <class>InventorySales</class>
  <name>civicrm_inventory_sales</name>
  <comment>FIXME</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique InventorySales ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>contact_id</name>
    <type>int unsigned</type>
    <comment>FK to Contact</comment>
  </field>
  <foreignKey>
    <name>contact_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>SET NULL</onDelete>
  </foreignKey>
  <field>
    <name>sale_date</name>
    <title>Sale Date</title>
    <type>datetime</type>
    <import>true</import>
    <headerPattern>/sale(.?date)?/i</headerPattern>
    <dataPattern>/^\d{4}-?\d{2}-?\d{2} ?(\d{2}:?\d{2}:?(\d{2})?)?$/</dataPattern>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
  </field>

  <field>
    <name>status_id</name>
    <uniqueName>inventory_sales_status_id</uniqueName>
    <title>Sales Status</title>
    <type>varchar</type>
    <comment>Sales Status</comment>
    <length>100</length>
    <required>true</required>
    <export>true</export>
    <import>true</import>
    <add>5.63</add>
  </field>
</table>
