<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Inventory</base>
  <class>InventorySales</class>
  <name>civicrm_inventory_sales</name>
  <comment>FIXME</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique InventorySales ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>contact_id</name>
    <title>Contact ID</title>
    <type>int unsigned</type>
    <comment>FK to Contact</comment>
    <html>
      <type>EntityRef</type>
      <label>Contact</label>
    </html>
  </field>
  <foreignKey>
    <name>contact_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>SET NULL</onDelete>
  </foreignKey>
  <field>
    <name>code</name>
    <title>Order ID</title>
    <uniqueName>inventory_sales_code</uniqueName>
    <type>varchar</type>
    <length>255</length>
    <required>false</required>
    <export>true</export>
    <import>true</import>
    <add>5.63</add>
    <html>
      <type>Text</type>
    </html>
    <comment>Random and Unique ID Generated.</comment>
  </field>
  <index>
    <name>UI_code</name>
    <unique>true</unique>
    <fieldName>code</fieldName>
    <add>1.0</add>
  </index>
  <field>
    <name>sale_date</name>
    <title>Sale Date</title>
    <type>datetime</type>
    <import>true</import>
    <headerPattern>/sale(.?date)?/i</headerPattern>
    <dataPattern>/^\d{4}-?\d{2}-?\d{2} ?(\d{2}:?\d{2}:?(\d{2})?)?$/</dataPattern>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
  </field>
  <field>
    <name>contribution_id</name>
    <uniqueName>inventory_sales_contribution_id</uniqueName>
    <title>Contribution ID</title>
    <html>
      <label>Contribution</label>
      <type>EntityRef</type>
    </html>
    <type>int unsigned</type>
    <comment>Contribution ID Associated with product.</comment>
    <required>false</required>
    <export>true</export>
    <import>true</import>
    <add>5.63</add>
  </field>
  <foreignKey>
    <name>contribution_id</name>
    <table>civicrm_contribution</table>
    <key>id</key>
    <onDelete>SET NULL</onDelete>
  </foreignKey>
  <field>
    <name>value_amount</name>
    <uniqueName>inventory_product_value_amount</uniqueName>
    <type>decimal</type>
    <default>0</default>
    <import>true</import>
    <dataPattern>/^\d+(\.\d{2})?$/</dataPattern>
    <comment>Fair market value.</comment>
    <html>
      <type>Text</type>
      <label>Fair Amount</label>
    </html>
  </field>
  <field>
    <name>updated_at</name>
    <uniqueName>inventory_sales_updated_at</uniqueName>
    <title>Updated Date</title>
    <default>CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP</default>
    <type>datetime</type>
    <import>true</import>
    <headerPattern>/created(.?date)?/i</headerPattern>
    <dataPattern>/^\d{4}-?\d{2}-?\d{2} ?(\d{2}:?\d{2}:?(\d{2})?)?$/</dataPattern>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
  </field>
  <field>
    <name>is_active</name>
    <title>Is Active</title>
    <uniqueName>inventory_sales_is_active</uniqueName>
    <type>boolean</type>
    <default>1</default>
    <required>false</required>
    <export>true</export>
    <html>
      <type>CheckBox</type>
    </html>
  </field>
  <field>
    <name>status_id</name>
    <uniqueName>inventory_sales_status_id</uniqueName>
    <title>Sales Status</title>
    <type>varchar</type>
    <comment>Sales Status: 'placed', 'shipped', 'completed'</comment>
    <length>100</length>
    <required>true</required>
    <export>true</export>
    <import>true</import>
    <add>5.63</add>
    <html>
      <label>Sales Status</label>
      <type>Select</type>
    </html>
    <pseudoconstant>
      <callback>CRM_Inventory_Utils::productSalesStatus</callback>
    </pseudoconstant>
  </field>
  <field>
    <name>product_id</name>
    <title>Model ID</title>
    <type>int unsigned</type>
    <comment>FK to product</comment>
    <html>
      <type>EntityRef</type>
      <label>Product/Model</label>
    </html>
  </field>
  <foreignKey>
    <name>product_id</name>
    <table>civicrm_inventory_product</table>
    <key>id</key>
    <onDelete>SET NULL</onDelete>
  </foreignKey>

  <field>
    <name>is_shipping_required</name>
    <title>Is Shipping Required</title>
    <uniqueName>inventory_sales_is_shipping_required</uniqueName>
    <type>boolean</type>
    <default>0</default>
    <required>false</required>
    <export>true</export>
    <html>
      <type>CheckBox</type>
    </html>
  </field>

  <field>
    <name>shipment_id</name>
    <title>Shipment ID</title>
    <type>int unsigned</type>
    <comment>FK to shipments</comment>
    <html>
      <type>EntityRef</type>
      <label>Shipment</label>
    </html>
  </field>
  <foreignKey>
    <name>shipment_id</name>
    <table>civicrm_inventory_shipment</table>
    <key>id</key>
    <onDelete>SET NULL</onDelete>
  </foreignKey>

  <field>
    <name>is_paid</name>
    <title>Is Paid</title>
    <uniqueName>inventory_sales_is_paid</uniqueName>
    <type>boolean</type>
    <default>0</default>
    <required>false</required>
    <export>true</export>
    <html>
      <type>CheckBox</type>
    </html>
  </field>

  <field>
    <name>is_fulfilled</name>
    <title>Is fulfilled</title>
    <uniqueName>inventory_sales_is_fulfilled</uniqueName>
    <type>boolean</type>
    <default>0</default>
    <required>false</required>
    <export>true</export>
    <html>
      <type>CheckBox</type>
    </html>
  </field>

  <field>
    <name>needs_assignment</name>
    <title>Needs Assignment</title>
    <uniqueName>inventory_sales_needs_assignment</uniqueName>
    <type>boolean</type>
    <default>0</default>
    <required>false</required>
    <export>true</export>
    <html>
      <type>CheckBox</type>
    </html>
  </field>

  <field>
    <name>has_assignment</name>
    <title>Has Assignment</title>
    <uniqueName>inventory_sales_has_assignment</uniqueName>
    <type>boolean</type>
    <default>0</default>
    <required>false</required>
    <export>true</export>
    <html>
      <type>CheckBox</type>
    </html>
  </field>

  <field>
    <name>is_tracking_sent</name>
    <title>Tracking Sent?</title>
    <uniqueName>inventory_sales_is_tracking_sent</uniqueName>
    <type>boolean</type>
    <default>0</default>
    <required>false</required>
    <export>true</export>
    <html>
      <type>CheckBox</type>
    </html>
  </field>
</table>
